set encoding=utf-8

syntax on
set t_Co=256
colorscheme molokai

set number

set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=2

set list
set listchars=tab:>-

set autoindent
set smartindent

set backspace=indent,eol,start

set cursorline

set ignorecase
set smartcase
set hlsearch
nmap <ESC><ESC> :nohlsearch<CR><ESC>
nmap n nzz
nmap N Nzz

nmap ; :
